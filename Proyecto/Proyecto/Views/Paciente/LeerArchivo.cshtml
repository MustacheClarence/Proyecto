@model List<Paciente>
@{
    ViewData["Title"] = "Listado de pacientes obtenidos";
}
<h2>@ViewData["Title"]</h2>


@if (Model != null){
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Nombre</td>
                <td>Id</td>
                <td>Edad</td>
                <td>Telefono</td>
                <td>Ultima visita</td>
                <td>Proxima visita</td>
                <td>Diagnostico</td>
            </tr>
        </thead>        
          
            @foreach(var paciente in Model)
            {
                <tr>
                <td>@paciente.Name</td>
                <td>@paciente.Id</td>
                <td>@paciente.Age</td>
                <td>@paciente.Tel</td>
                <td>@paciente.LastConsult</td>
                <td>@paciente.ProxConsult</td>
                <td>@paciente.Diagnostico</td>
                </tr>  
            }                
            </table>    
}